@model Restaurant
<section>
    <h3>@Model.Name</h3>
    <div>
        @if (!Model.Cuisine.Equals(CuisineType.None))
        {
            <span>@Model.Cuisine Cuisine</span>
        }
    </div>
    <br />
    <div>
        <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.Id"> Details </a>
        <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id"> Edit </a>
    </div>
</section>